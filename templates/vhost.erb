# file managed by puppet
<VirtualHost *:80>
  DocumentRoot /vagrant/public
  ServerName localhost

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Directory /vagrant/public>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog <%= scope.lookupvar('apacheparams::error_log') %>
  LogLevel warn
  CustomLog <%= scope.lookupvar('apacheparams::access_log') %> combined
  ServerSignature Off
</VirtualHost>
